{
    "version":"0.2.0",
    "configurations": [
        {
            "name": "Debug Local",
            "type": "Ruby",
            "request": "launch",
            "program": "${workspaceRoot}/bin/rails",
            "args": [
                "server"
            ],
            "cwd": "${workspaceRoot}",
            "showDebuggerOutput": true,
            "env": {
                "RAILS_ENV": "development"
            }
        },
        {
            "name": "Listen for rdebug-ide",
            "type": "Ruby",
            "request": "attach",
            "cwd": "${workspaceRoot}",
            "remoteHost": "peasant",
            "remotePort": "1234",
            "remoteWorkspaceRoot": "/home/vagrant/projects/maxsuelmarinho/ruby-on-rails-blog-example",
            "showDebuggerOutput": true
        },
    ]
}